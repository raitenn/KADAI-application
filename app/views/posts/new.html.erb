
<%= flash[:notice]%>
<h1>投稿一覧</h1>
<table>
	<tr><td>タイトル</td>
	<td>本分</td></tr>
	<% @posts.each do |post| %>
    	<tr>
    		
    		<td><%= post.title %></td>
    		
    		<td><%= post.body %></td>
    		<td><%=link_to '表示', post_path(post.id) %></td>
    		<td><%= link_to "編集", edit_post_path(post.id) %></td>
    		<td><%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
 	<% end %>
</table>


<h1>新規投稿</h1>
<!-- form_for部分 -->


<%= form_for(@post) do |f| %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
 
    <%= f.submit '投稿' %>
 
<% end %>
